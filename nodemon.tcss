#side-bar {
    dock: left;
    width: 40;
    height: 100%;
    color: #0f2b41;
    background: darkgray;
}

#log-container {
    dock: left;
    width: 40;
    height: 100%;
    color: #0f2b41;
    background: darkgray;
}

#node-status {
    dock: top;
    width: 100%;
    height: 1;
    color: #0f2b41;
    background: darkgray;
}

#container-node-table.-hidden {
    display: none;
}

#container-node-data.-hidden {
    display: none;
}

#node-screen-loading.-hidden {
    display: none;
}

#layer-screen-loading.-hidden {
    display: none;
}

#container-layer-table.-hidden {
    display: none;
}

# Loading Bar
#layer-screen-loading {
    align-vertical: middle;
    height: 90%;
}

#node-screen-loading {
    align-vertical: middle;
    height: 90%;
}

LoadingIndicator {
    height: auto;
}

#loading-message {
    text-align: center;
}

