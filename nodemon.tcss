.box {
    height: 100%;
    border: solid gray;
}


# Node Info Grid
#node-data-info {
    layout: grid;
    grid-size: 2 2;
    grid-columns: 1fr 1fr;
    grid-rows: 10% 90%;
}

#status-bar {
    column-span: 2;
    layout: grid;
    grid-size: 2 1;
    grid-columns: 10% 90%;
}

DataTable {
    width: 1fr;
    height: 100%;
}

#back-to-table-btn {
    border: none;
    height: 1;
}